<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="signup-box">
        <h2>Log In</h2>
        <%= form_with(url: login_path, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email', name: 'session[email]' %>
          </div>

          <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password', name: 'session[password]' %>
          </div>

          <div class="actions">
            <%= form.submit 'Log In', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <p>Don't have an account? <%= link_to 'Sign Up', signin_path %></p>
      </div>
    </div>
  </div>
</div>
