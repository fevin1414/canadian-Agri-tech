<h1>Admin Dashboard</h1>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'View', admin_show_user_path(user) %>
          <%= link_to 'Remove', admin_remove_user_path(user), method: :delete, data: { confirm: 'Are you sure you want to remove this user?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Categories</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Edit', admin_edit_category_path(category) %>
          <%= link_to 'Remove', admin_remove_category_path(category), method: :delete, data: { confirm: 'Are you sure you want to remove this category?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>

      <%= link_to 'Add Category', new_admin_category_path %>
</table>

<h2>Admins</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Products</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to 'View', admin_show_product_path(product) %>
          <%= link_to 'Edit', admin_edit_product_path(product) %>
          <%= link_to 'Remove', admin_remove_product_path(product), method: :delete, data: { confirm: 'Are you sure you want to remove this product?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

