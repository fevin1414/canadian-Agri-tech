<h1>Products</h1>

<div class="product-cards">
  <% @products.each do |product| %>
    <div class="product-card">
      <%= link_to product_path(product) do %>
        <%= image_tag('logo.png', alt: 'Product Image') %>
        <h3><%= product.name %></h3>
        <p><%= number_to_currency(product.price) %></p>
      <% end %>
    </div>
  <% end %>
</div>