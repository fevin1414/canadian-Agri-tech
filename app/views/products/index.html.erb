<h1>All Products</h1>

<%= form_tag products_path, method: :get do %>
  <div class="form-group">
    <%= label_tag 'category_id', 'Select Category:' %>
    <%= select_tag 'category_id', options_from_collection_for_select(@categories, 'id', 'name', params[:category_id]), include_blank: 'All Categories' %>
  </div>

  <div class="form-group">
    <%= label_tag 'keyword', 'Search by Keyword:' %>
    <%= text_field_tag 'keyword', params[:keyword], class: 'form-control', placeholder: 'Enter keyword' %>
  </div>

  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div class="product-cards">
  <% @products.each do |product| %>
    <div class="product-card">
      <%= image_tag('logo.png', alt: 'Product Image') %>
      <h3><%= product.name %></h3>
      <p><%= number_to_currency(product.price) %></p>
      <%= link_to 'View Details', product_path(product), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<%= paginate @products %>
